{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"sourceMap": true,
		"outDir": "build/SODS",
		"declaration": true,
		"rootDir": "src",
		"removeComments": true,
		"moduleResolution": "Node"
	},
	//указывает что включаться должны только файлы из папки /src
	"include": [
		"src/**/*"
	]
}
